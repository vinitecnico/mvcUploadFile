@using mvcUploadFile.Models
@model IEnumerable<CustomerModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <form asp-controller="Home" asp-action="UploadFile" method="post"  enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-12" style="margin-top: 1%;margin-bottom: 1%;">
                        <p>Upload one or more files using this form:</p>
                        <label class="btn btn-success btn-file">
                            Upload CSV <input type="file" name="file"/>
                        </label>
                    </div>
                    <div class="col-md-12" style="margin-bottom: 1%;">
                        <input type="submit" value="Upload" class="btn btn-primary"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @if (Model!= null && Model.Count() > 0)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (CustomerModel customer in Model)
                        {
                            <tr>
                                <td>
                                    @customer.Id
                                </td>
                                <td>
                                    @customer.Name
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>    
</div>
